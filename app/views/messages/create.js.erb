function refreshForm(innerHTML) {
  const newMessageForm = document.getElementById('new_message');
  newMessageForm.innerHTML = innerHTML;
}

function addMessage(messageHTML) {
  const conversation = document.getElementById('conversation');
  conversation.insertAdjacentHTML('afterbegin', messageHTML);
}

<% if @message.errors.any? %>
  refreshForm('<%= j render "messages/form", candidacy: @candidacy, message: @message %>');
<% else %>
  addMessage('<%= j render "messages/show", message: @message %>');
  refreshForm('<%= j render "messages/form", candidacy: @candidacy, message: Message.new %>');
<% end %>
