<div class="row">
  <div class="col-xs-12">
    <!-- grille -->
    <div id="inbox">
      <% if @discussions[0].nil? %>
        <h3>Vous n'avez pas encore de conversations.</h3>
      <% else %>
        <% @discussions.each do |discussion| %>
          <%= render 'messages/message_inbox', last_message: discussion.first[0], unread_messages: discussion[1]%>
        <% end %>
      <% end %>
    </div>
  </div>
</div>






