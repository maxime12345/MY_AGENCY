<div class="navbar-wagon">
  <!-- Logo -->

  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo-my.svg", height: 50 %> myAgency
  <% end %>
  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <% if current_user.candidacies.count > 0  %>
        <%= link_to candidacies_path, class: "navbar-wagon-item navbar-wagon-link"  do %>
          <i class="fas fa-folder-open"></i>  <%= "Mes candidatures" %>
        <% end %>
      <% end %>

      <% if current_user.flats.count > 0  %>
        <%= link_to flats_path, class: "navbar-wagon-item navbar-wagon-link"  do %>
          <i class="fas fa-home"></i>  <%= "Mes logements" %>
        <% end %>
      <% end %>

      <%= link_to new_flat_path, class: "navbar-wagon-item navbar-wagon-link"  do %>
        <i class="fas fa-plus-circle"></i>  <%= "Ajouter une annonce" %>
      <% end %>


      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= cl_image_tag current_user.avatar, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to profil_path(current_user) do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Configuration") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fas fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Déconnexion") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to new_user_session_path, class: "navbar-wagon-item navbar-wagon-link"  do %>
        <i class="fas fa-sign-in-alt"></i>  <%= t(".sign_in", default: "Connexion") %>
      <% end %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <% if user_signed_in? %>
      <div class="dropdown">
          <%= cl_image_tag current_user.avatar, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <% if current_user.candidacies.count > 0  %>
              <li>
                <%= link_to candidacies_path, class: "navbar-wagon-item navbar-wagon-link"  do %>
                  <i class="fas fa-folder-open"></i>  <%= "Mes candidatures" %>
                <% end %>
              </li>
            <% end %>
            <% if current_user.flats.count > 0  %>
              <li>
                <%= link_to flats_path, class: "navbar-wagon-item navbar-wagon-link"  do %>
                  <i class="fas fa-home"></i>  <%= "Mes logements" %>
                <% end %>
              </li>
            <% end %>
            <li>
              <%= link_to new_flat_path, class: "navbar-wagon-item navbar-wagon-link"  do %>
                <i class="fas fa-plus-circle"></i>  <%= "Ajouter une annonce" %>
              <% end %>
            </li>
            <li>
              <%= link_to profil_path(current_user) do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Configuration") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fas fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Déconnexion") %>
              <% end %>
            </li>
          </ul>
        </div>
    <% else %>
      <%= link_to new_user_session_path, class: "navbar-wagon-item navbar-wagon-link"  do %>
        <i class="fas fa-sign-in-alt"></i>  <%= t(".sign_in", default: "Connexion") %>
      <% end %>
    <% end %>


  </div>
</div>

