<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="card-form">
        <h3>Editer mon profile</h3>
        <%= simple_form_for @profil, url: profil_path do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :first_name, label: "Prénom"%>
            <%= f.input :last_name, label: "Nom" %>
            <%= f.input :address, label: "Adresse" %>
            <%= f.input :phone_number, label: "Un numéro de téléphone" %>
            <%= f.input :avatar, label: "Une petite photo de profil, c'est toujours sympa !" %>
            <%= f.input :avatar_cache, as: :hidden %>
            <div>
              <br>
              <h3>Pour ton dossier locataire (si tu veux être candidat à une location) :</h3>
            </div>
            <%= f.input :id_card, label: "Copie d'une pièce d'identité" %>
            <%= f.input :id_card_cache, as: :hidden %>
            <%= f.input :tax_notice, label: "Avis d'imposition" %>
            <%= f.input :tax_notice_cache, as: :hidden %>
            <%= f.input :payslip, label: "3 dernières fiches de salaire" %>
            <%= f.input :payslip_cache, as: :hidden %>
          </div>

          <div class="form-actions">
            <%= link_to 'Annuler', :back, class: "btn btn-default"%>
            <%= f.button :submit, 'Mettre à jour mon profile', class: "btn btn-primary pull-right" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
