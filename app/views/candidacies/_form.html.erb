<%= simple_form_for(candidacy, method: :put) do |f| %>
  <%= f.hidden_field :status, value: status %>
  <% if status == "Dossier archive" %>
    <%= f.button :button do %>
      <i class="fas fa-times-circle refuse-candidacy"></i>
    <% end %>
  <% else %>
    <%= f.button :button do %>
      <i class="fas fa-check-circle confirm-candidacy"></i>
    <% end %>
  <% end %>
<% end %>


