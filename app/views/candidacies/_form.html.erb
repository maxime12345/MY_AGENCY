<%= simple_form_for(candidacy, method: :put) do |f| %>
  <%= f.hidden_field :status, value: status %>
  <% if status == "Dossier archive" %>
    <%= f.button :submit, 'Refuser', class: "btn btn-success pull-center" %>
  <% else %>
    <%= f.button :submit, 'Accepter', class: "btn btn-success pull-center" %>
  <% end %>
<% end %>
